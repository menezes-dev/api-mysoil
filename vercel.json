{
    "version": 2,
    "builds": [
        {
            "src": "src/**/*.ts",
            "use": "@now/node"
        }
    ],
    "routes": [
        {
            "src": "/.*",
            "dest": "/src/server.ts"
        }
    ],
    "env": {
        "MONGODB_URI": "@MONGODB_URI",
        "DB_USER": "@DB_USER",
        "DB_PASSWORD": "@DB_PASSWORD",
        "SECRET_KEY": "@SECRET_KEY",
        "EXPIRES_IN": "@EXPIRES_IN"
    },
    "functions": {
        "src/server.ts": {
            "runtime": "node20.11",
            "memory": 512
        }
    }
}